<properties>
  <!--
      | Note: change the '1' in these patterns by 'A', 'a', 'I' or 'i' to get different numbering styles.
      | The inclusion of parent numbers is optional of course.
      | In addition, you can add any other characters to these patterns, e.g. "1)" is a valid pattern too.
      -->
  <entry key="numbering.default.increase-number">true</entry>
  <entry key="numbering.default.reset-number">false</entry>
  <entry key="numbering.default.h1.start-number">1</entry>
  <entry key="numbering.default.h1">1</entry>
  <entry key="numbering.default.h2">h1.1</entry>
  <entry key="numbering.default.h3">h1.h2.1</entry>
  <entry key="numbering.default.h4">h1.h2.h3.1</entry>
  <entry key="numbering.default.h5">h1.h2.h3.h4.1</entry>
  <entry key="numbering.default.h6">h1.h2.h3.h4.h5.1</entry>
  <entry key="numbering.default.h7">h1.h2.h3.h4.h5.h6.1</entry>
  <entry key="numbering.default.h8">h1.h2.h3.h4.h5.h6.h7.1</entry>
  <entry key="numbering.default.h9">h1.h2.h3.h4.h5.h6.h7.h8.1</entry>

  <!--
     | Numbering styles for appendix sections.
     -->
  <entry key="numbering.appendix.increase-number">true</entry>
  <entry key="numbering.appendix.reset-number">true</entry>
  <!-- The below properties assume the appendix sections are wrapped in an anonymous 'Appendix' section -->
  <entry key="numbering.appendix.h1">A</entry>
  <entry key="numbering.appendix.h2">h1.1</entry>
  <entry key="numbering.appendix.h3">h1.h2.1</entry>
  <entry key="numbering.appendix.h4">h1.h2.h3.1</entry>
  <entry key="numbering.appendix.h5">h1.h2.h3.h4.1</entry>
  <entry key="numbering.appendix.h6">h1.h2.h3.h4.h5.1</entry>
  <entry key="numbering.appendix.h7">h1.h2.h3.h4.h5.h6.1</entry>
  <entry key="numbering.appendix.h8">h1.h2.h3.h4.h5.h6.h7.1</entry>
  <entry key="numbering.appendix.h9">h1.h2.h3.h4.h5.h6.h7.h8.1</entry>

  <!--
     | Anonymous section headers: don't have a number
     -->
  <entry key="numbering.anonymous.increase-number">false</entry>
  <entry key="numbering.anonymous.reset-number">false</entry>
  <!-- start-number should be defined for the case where an anonymous section is the first within its parent. -->
  <entry key="numbering.anonymous.start-number">0</entry>

  <!--
     | Table of Contents parameters
     -->
  <entry key="toc.depth">4</entry>

  <!--
     | Number patterns for figures and tables
     -->
  <entry key="figure.default.numberpattern">hr-1</entry>
  <entry key="figure.screenshot.numberpattern">hr-1</entry>
  <entry key="table.default.numberpattern">hr-1</entry>

  <entry key="list-of-figures.include-types">default,screenshot</entry>
  <entry key="list-of-tables.include-types">default</entry>

  <!--
     | publishDate is a special property: it will get assigned the date/time the publication started.
     | The value of the property should be one of the following:
     |   - date
     |   - dateTime
     |   - a formatting pattern (e.g. dd MMM yyyy)
     -->
  <entry key="publishDate">date</entry>
</properties>