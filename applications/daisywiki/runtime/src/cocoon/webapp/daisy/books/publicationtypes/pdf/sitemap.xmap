<map:sitemap xmlns:map="http://apache.org/cocoon/sitemap/1.0">

  <map:components>
    <map:transformers default="xalan">
      <map:transformer name="PdfImageLinkTransformer" src="org.outerj.daisy.books.publisher.impl.cocooncomponents.PdfImageLinkTransformer"/>
      <map:transformer name="i18n" src="org.apache.cocoon.transformation.I18nTransformer">
        <catalogues default="default">
          <catalogue id="default" name="messages">
            <location>i18n</location>
            <location>../common/i18n</location>
          </catalogue>
        </catalogues>
        <cache-at-startup>true</cache-at-startup>
      </map:transformer>
    </map:transformers>
  </map:components>

  <map:views>
  </map:views>

  <map:resources>
  </map:resources>

  <map:pipelines>
   <map:pipeline internal-only="true" type="noncaching">
     <map:match pattern="StyleBook">
       <map:generate src="module:flow-attr:bookXmlInputStream"/>
       <map:transform type="DaisyTableHelper"/>
       <map:transform type="BookMergePropertiesAndMetadata"/>
       <map:transform src="html-to-xslfo.xsl">
         <map:parameter name="publicationTypeName" value="{flow-attr:publicationTypeName}"/>
       </map:transform>
       <map:transform type="PdfImageLinkTransformer">
         <map:parameter name="bookInstanceName" value="{flow-attr:bookInstanceName}"/>
       </map:transform>
       <map:transform type="i18n">
         <map:parameter name="locale" value="{flow-attr:localeAsString}"/>
       </map:transform>
       <map:serialize type="xml"/>
     </map:match>
   </map:pipeline>
 </map:pipelines>

</map:sitemap>
