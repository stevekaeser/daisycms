<page xmlns:ft="http://apache.org/cocoon/forms/1.0#template"
  xmlns:fi="http://apache.org/cocoon/forms/1.0#instance"
  xmlns:jx="http://apache.org/cocoon/templates/jx/1.0"
  xmlns:cinclude="http://apache.org/cocoon/include/1.0"
  xmlns:i18n="http://apache.org/cocoon/i18n/2.1">

  <jx:import uri="resource://org/apache/cocoon/forms/generation/jx-macros.xml"/>

  ${pageContext}

  <pageTitle><i18n:text key="wfsearch.task-search-title"/></pageTitle>
  <layoutHints wideLayout="true"/>

  <content>
    <h1><i18n:text key="wfsearch.task-search-title"/></h1>

    <a href="tasks"><i18n:text key="wf.section.my-tasks"/></a>
    | <i18n:text key="wf.section.search-tasks"/>
    | <a href="processSearch"><i18n:text key="wf.section.search-processes"/></a>
    | <a href="timerSearch"><i18n:text key="wf.section.search-timers"/></a>
    <br/>
    <br/>

    <ft:form-template name="wfSearch" action="taskSearch" method="GET">
      <fi:group>
        <fi:styling layout="daisy-columns"/>
        <fi:items>
          <ft:widget id="state"/>
          <ft:widget id="description"/>
          <ft:widget id="assignedTo"/>
          <ft:widget id="priority"/>
          <ft:widget id="processDefinition"/>
          <fi:widget-entry class="dsyfrm-primaryaction">
            <ft:widget id="send" fi:class="dsyfrm-primaryaction"/>
          </fi:widget-entry>
        </fi:items>
      </fi:group>
    </ft:form-template>

    <jx:if test="${wfSearchResultDataUrl != null}">
      <br/>
      <div id="taskSearchResult" dojoType="dojo:ContentPane"/>

      <script>
        dojo.require("daisy.workflow");

        dojo.addOnLoad(function() {
          new daisy.workflow.SearchResultController("taskSearchResult", "${wfSearchResultDataUrl}", "${pageContext.requestURI}", "<i18n:text key="wfsearch.return-to-task-search"/>");
        });
      </script>
    </jx:if>
  </content>

</page>