<page xmlns:ft="http://apache.org/cocoon/forms/1.0#template"
  xmlns:fi="http://apache.org/cocoon/forms/1.0#instance"
  xmlns:i18n="http://apache.org/cocoon/i18n/2.1"
  xmlns:jx="http://apache.org/cocoon/templates/jx/1.0">

  <jx:import uri="resource://org/apache/cocoon/forms/generation/jx-macros.xml"/>

  ${pageContext}

  <pageTitle><i18n:text key="placeholder.title"/></pageTitle>

  <content>
    <script type="text/javascript">
      dojo.require("daisy.dialog");

      function Init() {
        daisy.dialog.init();
        daisy.dialog.sizeAndPosition();
      }

      dojo.addOnLoad(Init);
    </script>

    <div class="dsydlg-title"><i18n:text key="placeholder.title"/></div>

    <ft:form-template id="placeholderForm" action="${mountPoint}/${siteName}/editing/createPlaceholder" method="POST">
      <fi:group>
        <fi:styling layout="daisy-columns" nowrap="true"/>
        <fi:items>
          <ft:widget id="name">
            <fi:styling size="45"/>
          </ft:widget>
          <ft:widget id="documentType">
          </ft:widget>
          <ft:widget id="collections">
            <fi:styling list-type="double-listbox">
              <fi:available-label><i18n:text key="mv-available"/></fi:available-label>
              <fi:selected-label><i18n:text key="mv-selected"/></fi:selected-label>
            </fi:styling>
          </ft:widget>
          <fi:custom-entry>
            <fi:label-entry><i18n:text key="variant"/></fi:label-entry>
            <fi:widget-entry>
              <!-- Branch and language are submit-on-change to cause the
                   document type list to be refreshed. -->
              <i18n:text key="branch"/>&#160;<ft:widget id="branchId" fi:disable-required-mark="true" fi:submit-on-change="true"/>
              &#160;
              <i18n:text key="language"/>&#160;<ft:widget id="languageId" fi:disable-required-mark="true" fi:submit-on-change="true"/>
            </fi:widget-entry>
          </fi:custom-entry>
        </fi:items>
      </fi:group>

      <div class="dsydlg-buttons">
        <input type="submit" value="placeholder.create" i18n:attr="value" class="dsyfrm-primaryaction"/>
        &#160;
        <button type="button" onclick="daisy.dialog.close(null); return false;"><i18n:text key="cancel"/></button>
      </div>
    </ft:form-template>
  </content>
</page>